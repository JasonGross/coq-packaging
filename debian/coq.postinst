#!/bin/sh

set -e

TEXCONFIG=/usr/bin/mktexlsr

case "$1" in
    configure)
        if [ -e $TEXCONFIG ]
        then
            $TEXCONFIG
        fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 0
    ;;
esac

#DEBHELPER#

exit 0
